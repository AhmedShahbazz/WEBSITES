@model AJAXX

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Form</title>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 600px;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .btn {
            width: 100%;
        }

        #labelDisplayOrder {
            color: #000000; /* This sets the text color to black */
            font-weight: bold; /* Optional: makes the text bold */
        }

        #labelCategoryName {
            color: #000000; /* This sets the text color to black */
            font-weight: bold; /* Optional: makes the text bold */
        }

        .card {
            border-radius: 0.375rem; /* Optional: adds rounded corners to the card */
            border: 1px solid #ddd; /* Optional: adds border color to the card */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }

        .card-body {
            padding: 1.25rem; /* Adjust padding if necessary */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .category-list-card {
            background-color: #445c3d; /* Blue background color */
        }

        .text-white {
            color: #ffffff; /* White text color */
        }
    </style>
</head>
<body>
    <div class="card mb-3 category-list-card">
        <div class="card-body text-center">
            <h2 class="text-white mb-0">Add New Category</h2>
        </div>
    </div>
    <div class="container mt-5">

        <form asp-action="Create" asp-controller="AJAXX" method="post">
            @*<div asp-validation-summary="All"></div>*@
            <div class="form-group">
                <label for="Name" id="labelCategoryName" style="margin-bottom: 15px;">Category Name</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter category name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="DisplayOrder" id="labelDisplayOrder" style="margin-bottom: 15px;">Display Order</label>
                <input type="number" class="form-control" id="DisplayOrder" name="DisplayOrder" placeholder="Enter display order" required>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary flex-fill mr-2">Create</button>
                @*<a asp-controller="AJAXX" asp-action="Index" class="btn btn-secondary flex-fill">Back</a>*@
            </div>
        </form>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
