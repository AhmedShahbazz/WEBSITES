@model IEnumerable<WEBSITES.Models.Product>

<style>
    html, body {
        height: 100%;
        margin: 0;
        min-height: 100%;
    }

    body {
        background-image: url('/images/back5.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .content-container {
        padding: 20px;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 10px;
        margin: 20px;
    }

    .card {
        height: auto;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        margin-bottom: 5px;
        font-weight: bold;
    }

    .shadowed-card {
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 1);
    }

    .btn {
        margin-top: 10px;
        border-radius: 7px;
    }

    .category-list-card {
        background-color: #445c3d;
    }

    .category-list-cards {
        background-color: black;
        margin-top: 50px;
    }

    .text-white {
        color: #ffffff;
    }

    .row.pb-3 {
        margin-bottom: 30px;
    }

    .card {
        margin-top: 20px;
    }

    .circular-card {
        border-radius: 7px;
        overflow: hidden;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;

    }

    .circular-card .card-body {
        padding: 0;
    }

    .btn-outline-success {
        background-color: grey; /* Default color */
        border-color: grey;
        color: black;
        font-weight: bold;
        border-radius: 10px;
    }

        .btn-outline-success:hover {
            background-color: green; /* Hover color */
        }

    .form-control {
        border: 3px solid black;
        border-radius:10px;
       
    }


     


</style>

<div class="content-container">
    <!-- Search Form -->
    <form method="get" action="">
        <div class="input-group mb-3">
            <input type="text" name="searchQuery" class="form-control mr-sm-2" type="search" placeholder="Search products..." aria-label="earch products" aria-describedby="button-search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="button-search">Search</button>
          
        </div>
    </form>

    <div class="cards mb-3 category-list-cards circular-card">
        <div class="card-body text-center">
            <h2 class="text-white mb-0">PRODUCTS</h2>
        </div>
    </div>

    @foreach (var categoryGroup in Model.GroupBy(p => p.Category))
    {
        <div class="category-section">
            <div class="cards mb-3 category-list-card circular-card">
                <div class="card-body text-center">
                    <h2 class="text-white mb-0">@categoryGroup.Key.Name</h2>
                </div>
            </div>

            <div class="row pb-3">
                @foreach (var product in categoryGroup)
                {
                    <div class="col-lg-3 col-sm-6 mb-4">
                        <div class="card border-0 p-3 shadowed-card border-top border-5 rounded">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="~/images/@product.ImageUrl" class="card-img-top rounded" alt="Product Image">
                            }
                            else
                            {
                                <img src="~/images/default-image.png" class="card-img-top rounded" alt="Default Image">
                            }
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-title">Expiry Date: @product.ExpiryDate.ToString("yyyy-MM-dd")</p>
                                <p class="card-title">Category: @product.Category.Name</p>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
