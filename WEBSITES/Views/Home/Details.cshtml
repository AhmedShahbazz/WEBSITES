@model WEBSITES.Models.Product

<form method="post">
    <div class="container mt-5 mb-5">
        <div class="card shadow-lg border-0 rounded-lg">
            <div class="card-header" style="background-color: #445c3d; color: white;">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="text-white text-uppercase">@Model.Name</h3>
                        <h4 class="text-white text-uppercase">Category: @Model.Category.Name</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Move the button here for better placement -->
                <div class="row mb-4">
                    <div class="col-12 text-start">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> Back to Home
                        </a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-5 text-center mb-4">
                        <!-- Ensure that the ImageUrl is correctly set -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="~/images/@Model.ImageUrl" class="img-fluid rounded shadow" alt="Product Image">
                        }
                        else
                        {
                            <img src="~/images/default-image.png" class="img-fluid rounded shadow" alt="Default Image">
                        }
                    </div>
                    <div class="col-12 col-lg-7">
                        <div class="mb-4">
                            <h6 class="text-dark">Category: @Model.Category.Name</h6>
                        </div>
                        <div class="mb-3">
                            <h6 class="text-dark">Expiry Date: @Model.ExpiryDate.ToString("yyyy-MM-dd")</h6>
                        </div>
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text bg-primary text-white border-0">Count</span>
                                <input type="number" value="1" class="form-control text-end" aria-label="Sizing example input" />
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" disabled class="btn btn-primary bg-gradient py-2 text-uppercase fw-semibold">
                                Add to Cart (Coming Soon...)
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<style>
    /* Product Detail Page Styles */

    /* Container */
    .container {
        max-width: 1200px;
    }

    /* Card */
    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 0; /* Remove margin to eliminate extra space around the card */
    }

    .btn-primary {
        background-color: gray; /* Bootstrap primary color */
        border: none;
        border-radius: 0.25rem;
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: darkgray; /* Darker shade for hover effect */
        }

        

    .card-header {
        border-bottom: 1px solid #ddd;
        background-color: #445c3d; /* Updated color */
        color: white; /* Ensure text is readable */
    }

    .card-body {
        padding: 1.5rem; /* Adjusted padding for a tighter layout */
    }

    /* Typography */
    h3 {
        font-size: 1.75rem;
        font-weight: 700;
    }

    h6 {
        font-size: 1rem;
        font-weight: 500;
    }

    /* Image */
    .img-fluid {
        width: 100%;
        height: 300px; /* Set a fixed height */
        object-fit: cover; /* Ensures images cover the specified dimensions without stretching */
        border-radius: 0; /* Remove border radius to align with card */
    }

    /* Badge */
    .badge {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .text-dark{
        font-weight: bold;
    }

    /* Input Group */
   

    
</style>
