@model List<WEBSITES.Models.Category>

<partial name="_Notification" />

<div class="container">
    <div class="row pt-4 pb-3 d-flex align-items-center">
        <div class="col text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <!-- Card for the Header -->
    <div class="card mb-3 category-list-card">
        <div class="card-body text-center">
            <h2 class="text-white mb-0">Category List</h2>
        </div>
    </div>

    <!-- Card for the Table -->
    <div class="card bg-white">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Display Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                        {
                            <tr>
                                <td>@obj.Name</td>
                                <td>@obj.DisplayOrder</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 custom-btn-width">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <button class="btn btn-danger mx-2 custom-btn-width" onclick="confirmDelete('@obj.Id')">
                                            <i class="bi bi-trash-fill"></i> Delete
                                        </button>
                                        <form id="delete-form-@obj.Id" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" method="post" style="display:none;">
                                            <input type="hidden" name="Id" value="@obj.Id" />
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function confirmDelete(id) {
            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: "btn btn-success",
                    cancelButton: "btn btn-danger"
                },
                buttonsStyling: false
            });

            swalWithBootstrapButtons.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "No, cancel!",
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'POST',
                        url: '/Category/Delete/' + id,
                        data: {
                            "__RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            swalWithBootstrapButtons.fire({
                                title: "Deleted!",
                                text: "Your category has been deleted.",
                                icon: "success"
                            }).then(() => {
                                location.reload();
                            });
                        },
                        error: function () {
                            swalWithBootstrapButtons.fire({
                                title: "Error!",
                                text: "There was an error deleting the category.",
                                icon: "error"
                            });
                        }
                    });
                } else if (result.dismiss === Swal.DismissReason.cancel) {
                    swalWithBootstrapButtons.fire({
                        title: "Cancelled",
                        text: "Your category is safe :)",
                        icon: "error"
                    });
                }
            });
        }
    </script>
}

<style>
    .custom-btn-width {
        width: 300px; /* Adjust the width as needed */
    }

    .card {
        border-radius: 0.375rem; /* Optional: adds rounded corners to the card */
        border: 1px solid #ddd; /* Optional: adds border color to the card */
    }

    .card-body {
        padding: 1.25rem; /* Adjust padding if necessary */
    }

    .text-primary {
        color: #007bff; /* Ensure the text color fits your design */
    }

    .bg-light {
        background-color: #f8f9fa; /* Light background color */
    }

    .bg-white {
        background-color: #ffffff; /* White background color */
    }

    .category-list-card {
        background-color: #445c3d; /* Green background color */
    }

    .text-white {
        color: #ffffff; /* White text color */
    }
</style>
