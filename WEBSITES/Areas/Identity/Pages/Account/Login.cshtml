@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%; border-radius: 15px;">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h2 class="text-center mb-3">Welcome Back!</h2>
                <p class="text-center text-muted">Please enter your details to log in</p>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div class="d-grid mb-3">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                </div>
                <div class="text-center">
                    <p class="text-muted">Forgot your password? <a id="forgot-password" class="text-primary text-decoration-none" asp-page="./ForgotPassword">Click here</a></p>
                    <p class="text-muted">New user? <a class="text-primary text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register here</a></p>
                    <p class="text-muted">Need to resend confirmation? <a id="resend-confirmation" class="text-primary text-decoration-none" asp-page="./ResendEmailConfirmation">Click here</a></p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        font-family: 'Open Sans', sans-serif;
    }

    h1, h2 {
        color: #fff;
    }

    .card {
        border-radius: 15px;
        border: none;
        background: #fff;
    }

    form {
        padding: 20px;
    }

    .form-floating label {
        color: #495057;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #6a11cb;
    }

    .btn-primary {
        background: #6a11cb;
        border: none;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background: #5a0dab;
        }

    .text-decoration-none:hover {
        text-decoration: underline;
    }

    .text-center {
        color: #fff;
    }

</style>